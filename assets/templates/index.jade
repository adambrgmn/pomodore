- var manifest = htmlWebpackPlugin.files.manifest
doctype html
<!--[if lt IE 7 ]><html lang="en" class="ie6" manifest=manifest><![endif]-->
<!--[if IE 7 ]><html lang="en" class="ie7" manifest=manifest><![endif]-->
<!--[if IE 8 ]><html lang="en" class="ie8" manifest=manifest><![endif]-->
<!--[if IE 9 ]><html lang="en" class="ie9" manifest=manifest><![endif]-->
<!--[if (gt IE 9)|!(IE)]><!-->
html(lang="en", class="", manifest=manifest)
  <!--<![endif]-->
  head
    title
      | #{htmlWebpackPlugin.options.title} | #{htmlWebpackPlugin.options.tagline}
    each file, index in htmlWebpackPlugin.files.css
      link(href=file, rel="stylesheet")
  body
    header.header.container#header
      h1 #{htmlWebpackPlugin.options.title}
      p #{htmlWebpackPlugin.options.tagline}

    if (htmlWebpackPlugin.options.appMountId)
      .container(id=htmlWebpackPlugin.options.appMountId)

    footer.container
      p.footer-information #{htmlWebpackPlugin.options.title} v#{htmlWebpackPlugin.options.version} | <a href="http://www.fransvilhelm.com">Adam Bergman</a>

    each file, key in htmlWebpackPlugin.files.chunks
      script(src=file.entry)
</html>
