{
  /**
   * Application configuration section
   * http://pm2.keymetrics.io/docs/usage/application-declaration/
   */
  "apps": [
    {
      "name": "pomodore",
      "script": "server/server.js",
      "env": {},
      "env_production": {
        "NODE_ENV": "production"
      },
      "env_development": {
        "NODE_ENV": "development"
      }
    }
  ],

  /**
   * Deployment section
   * http://pm2.keymetrics.io/docs/usage/deployment/
   */
  "deploy": {
    "production": {
      "user": "adam",
      "host": "188.166.0.53",
      "ref": "origin/master",
      "repo": "https://github.com/adambrgmn/pomodore.git",
      "path": "/var/www/prod/pomodore.fransvilhelm.com",
      "post-deploy": "npm install ; gulp build ; cd dist ; npm install ; pm2 startOrRestart ecosystem.json --env production",
      "env": {
        "NODE_ENV": "production"
      }
    },
    "development": {
      "user": "adam",
      "host": "188.166.0.53",
      "ref": "origin/develop",
      "repo": "https://github.com/adambrgmn/pomodore.git",
      "path": "/var/www/dev/pomodore.fransvilhelm.com",
      "post-deploy": "npm install && bower install ; pm2 startOrRestart ecosystem.json --env development",
      "env": {
        "NODE_ENV": "development"
      }
    }
  }
}
